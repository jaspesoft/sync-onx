{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "types": ["reflect-metadata"],
        "outDir": "./dist",
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "rules": {
        "no-unused-variable": false,
        "no-unused-expression": false
      }
}